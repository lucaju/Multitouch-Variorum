package view.util.preloader {		//import	import flash.display.Loader;	import flash.display.Sprite;	import flash.net.URLRequest;		/**	 * 	 * @author lucaju	 * 	 */	public class Preloader extends Sprite {				//****************** Properties ****************** ****************** ******************		protected var animation		:Loader;						//****************** PUBLIC METHODS ****************** ****************** ******************				/**		 * 		 * 		 */		public function start():void {						var urlRequest:URLRequest = new URLRequest("view/util/preloader/preloader.swf")			animation = new Loader();			animation.load(urlRequest);			this.addChild(animation);						animation.scaleX = animation.scaleY = .1;		}			}}